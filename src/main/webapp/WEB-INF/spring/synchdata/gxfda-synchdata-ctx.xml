<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
>
    <description>配置同步数据源</description>
    <bean
        id="appSynchDataSourceService"
        class="cn.com.chaochuang.synchdata.service.AppSynchDataSourceService" parent="localDataSourceService"
    >
        <property
            name="driver"
            value="${app.jdbc.driver}" />
        <property
            name="url"
            value="${app.jdbc.url}" />
        <property
            name="userName"
            value="${app.jdbc.username}" />
        <property
            name="passwd"
            value="${app.jdbc.password}" />
        <property
            name="minIdle"
            value="${app.jdbc.minidle}" />
        <property
            name="maxIdle"
            value="${app.jdbc.maxidle}" />
        <property
            name="maxActive"
            value="${app.jdbc.maxactive}" />
    </bean>

    <bean
        id="voiceSynchDataSourceService"
        class="cn.com.chaochuang.synchdata.service.VoiceSynchDataSourceService" parent="localDataSourceService"
    >
        <property
            name="driver"
            value="${voice.jdbc.driver}" />
        <property
            name="url"
            value="${voice.jdbc.url}" />
        <property
            name="userName"
            value="${voice.jdbc.username}" />
        <property
            name="passwd"
            value="${voice.jdbc.password}" />
        <property
            name="minIdle"
            value="${voice.jdbc.minidle}" />
        <property
            name="maxIdle"
            value="${voice.jdbc.maxidle}" />
        <property
            name="maxActive"
            value="${voice.jdbc.maxactive}" />
    </bean>

