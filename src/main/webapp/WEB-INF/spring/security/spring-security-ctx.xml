<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans:beans
    xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd"
>
    <beans:description>Spring Security配置</beans:description>

    <global-method-security pre-post-annotations="enabled" />

    <http
        pattern="/www/**"
        security="none" />

    <http
        pattern="/docwork/**"
        security="none" />

    <http
        pattern="/selectentp/replist*"
        security="none" />
    <http
        pattern="/datacenter/prodstore/drugPage/list*"
        security="none" />
    <http
        pattern="/selectentp/list*"
        security="none" />
    <http
        pattern="/datacenter/staffstore/pharmacistShow/list*"
        security="none" />
    <http
        pattern="/datacenter/staffstore/entpApply/list*"
        security="none" />
    <http
        pattern="/datacenter/staffstore/pharmacistApply/list*"
        security="none" />
    <http
        pattern="/datacenter/staffstore/searchApply/list*"
        security="none" />
    <http
        pattern="/datacenter/staffstore/searchApply/search*"
        security="none" />
    <http
        pattern="/assets/**"
        security="none" />
    <http
        pattern="/resources/**"
        security="none" />
    <http
        pattern="/styles/**"
        security="none" />
    <http
        pattern="/css/**"
        security="none" />
    <http
        pattern="/fonts/**"
        security="none" />
    <http
        pattern="/images/**"
        security="none" />
    <http
        pattern="/js/**"
        security="none" />
    <http
        pattern="/lib/**"
        security="none" />
    <http
        pattern="/ocx/**"
        security="none" />
    <http
        pattern="/login.html"
        security="none" />
    <http
        pattern="/loginfail.html"
        security="none" />

    <http
        pattern="/sessioninfo*.html"
        security="none" />

    <!-- 允许上传 -->
    <http
        pattern="/**/upload.json"
        security="none" />

    <!-- HTTP security configurations -->
    <http
        use-expressions="true"
        access-decision-manager-ref="access-decision-manager"
    >

        <intercept-url
            pattern="/common/login"
            access="true" />

        <form-login
            authentication-details-source-ref="TrueRemoteAddressWebAuthenticationDetailsSource"
            username-parameter="account"
            password-parameter="password"
            login-processing-url="/common/login"
            authentication-failure-url="/loginfail.html"
            always-use-default-target="true"
            default-target-url="${after.login.mainpage.url}"
            login-page="${login.page.url}" />
        <logout logout-url="/common/logout" />

        <intercept-url
            pattern="/**"
            access="isFullyAuthenticated()" />

        <session-management>
            <concurrency-control
                max-sessions="10000"
                expired-url="/sessioninfo1.html" />
        </session-management>

        <access-denied-handler error-page="/accessdenied" />

    </http>

    <beans:bean
        id="PasswordEncoder"
        class="cn.com.chaochuang.common.security.util.AutoLoginMd5PasswordEncoder"
    >
        <beans:property name="keySalt">
            <beans:value>${security.keysalt}</beans:value>
        </beans:property>
        <beans:property name="expiredSecond">
            <beans:value>${security.expiredsecond}</beans:value>
        </beans:property>
    </beans:bean>
    <beans:bean
        id="SimpleUserDetailsProxyService"
        class="cn.com.chaochuang.common.security.service.SimpleUserDetailsProxyService"
    >
        <beans:property name="userDetailsService">
            <beans:ref bean="SimpleUserDetailsService" />
        </beans:property>
    </beans:bean>

    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="SimpleUserDetailsProxyService">
            <password-encoder ref="PasswordEncoder" />
        </authentication-provider>
    </authentication-manager>

    <beans:bean
        id="access-decision-manager"
        class="org.springframework.security.access.vote.UnanimousBased"
    >
        <beans:constructor-arg>
            <beans:list>
                <beans:bean class="org.springframework.security.web.access.expression.WebExpressionVoter" />
                <beans:bean class="cn.com.chaochuang.common.security.vote.PowerUrlVoter">
                    <beans:property name="allPowerUrlGranted">
                        <beans:value>${security.PowerUrlVoter.allPowerUrlGranted}</beans:value>
                    </beans:property>
                </beans:bean>
            </beans:list>
        </beans:constructor-arg>
    </beans:bean>

    <beans:bean
        id="TrueRemoteAddressWebAuthenticationDetailsSource"
        class="cn.com.chaochuang.common.security.support.TrueRemoteAddressWebAuthenticationDetailsSource"
    ></beans:bean>

    <beans:bean class="cn.com.chaochuang.common.security.service.OnlineUserService"></beans:bean>

</beans:beans>